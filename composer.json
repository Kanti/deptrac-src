{
    "name": "qossmic/deptrac",
    "description": "Deptrac is a static code analysis tool that helps to enforce rules for dependencies between software layers.",
    "license": "MIT",
    "keywords": ["dev", "static analysis"],
    "authors": [
        {
            "name": "Tim Glabisch"
        },
        {
            "name": "Simon MÃ¶nch",
            "email": "simon.moench@qossmic.com"
        },
        {
            "name": "Denis Brumann",
            "email": "denis.brumann@qossmic.com",
            "role": "maintainer"
        }
    ],
    "bin": [
        "deptrac"
    ],
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "composer/xdebug-handler": "^3.0.5",
        "jetbrains/phpstorm-stubs": "^2024.1",
        "nikic/php-parser": "^4.19.1",
        "phpdocumentor/graphviz": "^2.1",
        "phpdocumentor/type-resolver": "^1.8.2",
        "phpstan/phpdoc-parser": "^1.25",
        "psr/container": "^2.0.2",
        "psr/event-dispatcher": "^1.0",
        "symfony/config": "^6.4.8",
        "symfony/console": "^6.4.9",
        "symfony/dependency-injection": "^6.4.9",
        "symfony/event-dispatcher": "^6.4.8",
        "symfony/event-dispatcher-contracts": "^3.5",
        "symfony/filesystem": "^6.4.9",
        "symfony/finder": "^6.4.8",
        "symfony/stopwatch": "^6.4.8",
        "symfony/yaml": "^6.4.8"
    },
    "suggest": {
        "ext-dom": "For using the JUnit output formatter"
    },
    "autoload": {
        "psr-4": {
            "Qossmic\\Deptrac\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Qossmic\\Deptrac\\": "tests/",
            "Internal\\Qossmic\\Deptrac\\": "internal/deptrac/"
        }
    },
    "config": {
        "platform": {
            "php": "8.1"
        },
        "sort-packages": true,
        "allow-plugins": {
            "infection/extension-installer": true
        }
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.56.2",
        "infection/infection": "^0.26.21",
        "phpstan/phpstan": "^1.10.57",
        "phpstan/phpstan-symfony": "^1.3.7",
        "phpunit/phpunit": "^10.5.10",
        "roave/infection-static-analysis-plugin": "^1.31",
        "shipmonk/composer-dependency-analyser": "^1.5",
        "vimeo/psalm": "^5.25"
    }
}
